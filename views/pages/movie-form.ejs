<%- include('../partials/header') %>

<main class="main" id="main">
    <div class="container">
        <h2 class="text-center text-capitalize">add a movie</h2>
        <form 
            action="http://localhost:3000/api/movie/create" 
            method="post"
            class="form" 
            id="movieForm"
        >
        <div class="row mb-3">
            <div class="col">
                <label for="movie" class="form-label">
                    title
                </label>
                <input 
                    type="text"
                    id="title"
                    name="title"
                    class="form-control"
                />
            </div>
                    <div class="row mb-3">
            <div class="col">
                <label for="movie" class="form-label">
                    rating
                </label>
                <input 
                    type="text"
                    id="rating"
                    name="rating"
                    class="form-control"
                />
            </div>
                    <div class="row mb-3">
            <div class="col">
                <label for="movie" class="form-label">
                    runtime
                </label>
                <input 
                    type="datetime"
                    id="runtime"
                    name="runtime"
                    class="form-control"
                />
            </div>
                    <div class="row mb-3">
            <div class="col">
                <label for="movie" class="form-label">
                    nationality
                </label>
                <input 
                    type="text"
                    id="nationality"
                    name="nationality"
                    class="form-control"
                />
            </div>
                    <div class="row mb-3">
            <div class="col">
                <label for="movie" class="form-label">
                    year released
                </label>
                <input 
                    type="number"
                    id="yr_released"
                    name="yr_released"
                    class="form-control"
                />
            </div>
        </div>
        <button 
            class="btn btn-primary"
            type="submit"
            role="button"
        >Add Movie</button>
    </form>
    </div>
</main>

<%- include('../partials/footer') %>